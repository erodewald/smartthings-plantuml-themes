!$THEME = "smartthings"

!if %not(%variable_exists("$BGCOLOR"))
  !$BGCOLOR = "white"
!endif

!if %not(%variable_exists("$FGCOLOR"))
  !$FGCOLOR = "black"
!endif

!if %not(%variable_exists("$HYPERLINK_COLOR"))
  !$HYPERLINK_COLOR = "blue"
!endif

!ifndef $FONT_NAME
  !$FONT_NAME = "Helvetica"
!endif

!ifndef $FONT_NAME_MONOSPACED
  !$FONT_NAME_MONOSPACED = "Courier"
!endif


!$SUCCESS = "#4CAF50"
!$INFO = "#9C27B0"
!$WARNING = "#ff9800"
!$DANGER = "#e51c23"

!function $twoxx($msg) 
!return "<font color=" + $SUCCESS + "><&circle-check>" + $msg + "</font>"
!endfunction

!function $4xx($msg) 
!return "<font color=" + $WARNING + "><&lock-locked>" + $msg + "</font>"
!endfunction

!function $5xx($msg) 
!return "<font color=" + $DANGER + "><&circle-x>" + $msg + "</font>"
!endfunction

!function $success($msg)
!return "<font color=" + $SUCCESS + "><b>" + $msg + "</b></font>"
!endfunction

!function $danger($msg) 
!return "<font color=" + $DANGER + "><b>" + $msg + "</b></font>"
!endfunction

!function $warning($msg) 
!return "<font color=" + $WARNING + "><b>" + $msg + "</b></font>"
!endfunction

!function $info($msg) 
!return "<font color=" + $INFO + "><b>" + $msg + "</b></font>"
!endfunction

!function $quote($msg) 
!return "<font color=" + $INFO + "><&double-quote-serif-left>" + $msg + "<&double-quote-serif-right></font>"
!endfunction

!procedure $primary_scheme()
	FontColor $PRIMARY_TEXT
	BorderColor $PRIMARY
	BackgroundColor $BGCOLOR
!endprocedure

<style>
  root {
    BackgroundColor $BGCOLOR
    FontColor $FGCOLOR
    FontName $FONT_NAME
    HyperLinkColor $HYPERLINK_COLOR
    LineColor $FGCOLOR
    LineThickness 1
    Margin 5
  }
  caption {
    LineThickness 0
  }
